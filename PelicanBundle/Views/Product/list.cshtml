@model ProductsListViewModel
@{
    Layout = "_ProductLayout";
}

<div id="NavigationMenu" class="d-flex justify-content-center mt-5 mb-5 col-sm-12">
    @await Component.InvokeAsync("NavigationMenu")
</div>

@foreach (var p in Model.Products)
{
    
            @Html.Partial("ProductSummary", p)
      
            }
            <div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
                 page-class="btn" page-class-normal="btn-default"
                 page-class-selected="btn-primary float-right bg-dark" page-url-category="@Model.CurrentCategory" class="btngroup float-right col-sm-12" style="
    margin-bottom: 10px;">
            </div>
