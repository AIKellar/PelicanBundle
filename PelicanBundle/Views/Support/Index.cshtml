@model SupportTicket 

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="TicketID" />
    <div class="form-group">
        <label asp-for="ReasonCode"></label>
        <div><span asp-validation-for="ReasonCode" class="text-danger"></span></div>
        <select asp-for="ReasonCode" class="form-control">
            <option value="1 - Didnt receive keys">1 - Didnt receive keys</option>
            <option value="2 - Account/Registration Problem">2 - Account/Registration Problem</option>
            <option value="3 - Incorrect Order">3 - Incorrect Order</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ProblemDescription"></label>
        <div><span asp-validation-for="ProblemDescription" class="text-danger"></span></div>
        <textarea asp-for="ProblemDescription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>
