<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
    <link rel="stylesheet" asp-href-include="lib/font-awesome/css/*.css" />
    <link rel="stylesheet" type="text/css" asp-href-include="Stylesheets/Everything.css">
    <title>Pelican Bundle</title>

</head>
<body>
    <div id="topheader">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Pelican Bundle</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                Home
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="List">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="About" asp-action="Display">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Support" asp-action="Index">Customer Support</a>
                        </li>
                    </ul>
                    <div class="float-right">
                        @await Component.InvokeAsync("CartSummary")
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="col col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                $('ul.nav.navbar-nav').find('a[href="' + location.pathname + '"]')
                    .closest('li').addClass('active');
            });
    </script>
</body>
</html>

